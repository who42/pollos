<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edita el Perfil</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label :cover %>
          <br>
          <%= render 'shared/cover', user: @user %>
          <br>
          <%= f.file_field :cover %>
        </div>
        <div class="form-group">
          <%= f.label :nom %>
          <%= f.text_field :name, placeholder: 'Nom Complet', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :sobre_tu %>
          <%= f.text_area :about, placeholder: 'Sobre tu', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :població %>
          <%= f.text_field :location, placeholder: 'Població', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Talefanu %>
          <%= f.text_field :phone_number, placeholder: 'Número talefanu', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :aniversari %>
          <%= f.text_field :dob, placeholder: 'El dia que et van parir', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :sexe %><br>
          <%= f.select :sex, options_for_seasons, class: 'form-control', prompt: 'Select One' %>
        </div>
        <div class="actions">
          <%= submit_tag 'Actualitza', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>