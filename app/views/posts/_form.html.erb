    <div class="form-group">
      <h4>Actualitza el estat</h4>
      <%= f.text_area :content, class: 'form-control', autofocus: true, placeholder: 'QuÃ¨ pasa en tu casa?' %>
    </div>
    <div id="img-preview" class="form-group hidden">
