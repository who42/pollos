<% if activity.trackable %>
  <div class="activity-like">
    <div class="info">
      <%= render 'shared/avatar', user: activity.owner %>
      <h4 class="name"><%= activity.owner.name %></h4>
      <span class="action">li ha agradat ---> <%= link_to 'post', activity.trackable %></span>
    </div>
    <div class="content">
      <h4><small><%= activity.trackable.content %></small></h4>
    </div>
    <%= render 'shared/created_at', activity: activity %>
  </div>
<% end %>